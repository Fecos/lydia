<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
		xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
			android:title="@string/bluetooth">
		<SwitchPreference
				android:key="systemBluetooth"
				android:defaultValue="false"
				android:title="System Bluetooth" />
		<SwitchPreference
				android:key="useBluetooth"
				android:defaultValue="false"
				android:title="Use bluetooth"
				android:dependency="systemBluetooth"/>
		<Preference
				android:key="bluetooth_phone_address"
				android:title="@string/phone"
				android:summary="Pair a new phone"
				android:dependency="systemBluetooth">
				<intent android:action=".activities.DeviceListActivity"/>
		</Preference>
		<EditTextPreference
				android:key="phone_address"
				android:title="@string/address"
				android:summary="Address of phone currently paired"
				android:dependency="systemBluetooth"/>
	</PreferenceCategory>
</PreferenceScreen>