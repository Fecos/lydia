<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dip"
		>
	<EditText android:id="@+id/address_search" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/search"/>
	<TextView android:text="@string/address" style="@style/MediumText" android:layout_above="@id/address_search"/>
	<ListView android:id="@+id/address_list"
			  android:layout_height="match_parent"
			  android:layout_width="match_parent"
			  android:layout_below="@id/address_search"/>
</RelativeLayout>