<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dip"
		>
	<TextView android:id="@+id/home_screen_title"
			  style="@style/MediumText"
			  android:text="Setup Home Screen Layout" />
	<View android:layout_width="match_parent"
		  android:layout_height="1dip"
		  android:background="#33B5E5"
		  android:layout_below="@id/home_screen_title"
		  android:id="@+id/home_screen_title_hr"/>

	<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerInParent="true"
			android:layout_below="@id/home_screen_title_hr">
		<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			<Button	android:id="@+id/settings_home0"
				style="@style/DashboardRoundTopLeft"/>
			<Button android:id="@+id/settings_home1"
				style="@style/DashboardControls"/>
			<Button android:id="@+id/settings_home2"
				style="@style/DashboardRoundTopRight"/>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			<Button android:id="@+id/settings_home3"
				style="@style/DashboardRoundBottomLeft"/>
			<Button android:id="@+id/settings_home4"
				style="@style/DashboardControls"/>
			<Button android:id="@+id/settings_home5"
				style="@style/DashboardRoundBottomRight"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>