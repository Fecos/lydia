<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="5dip">

	<ImageButton android:id="@+id/volume_down"
		android:src="@drawable/navigation_expand"
		android:contentDescription=""
		style="@style/HeaderbarButtons" />
	<ImageButton android:id="@+id/volume_up"
		android:src="@drawable/navigation_collapse"
		android:contentDescription=""
		style="@style/HeaderbarRoundTopRight"
		android:layout_toRightOf="@id/volume_down"/>
	<DigitalClock android:id="@+id/clock"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Clock"
		style="@style/LargeText"
		android:paddingBottom="10dip"
		android:layout_centerInParent="true"/>
	<SeekBar android:id="@+id/volume_control"
		android:layout_height="wrap_content"
		android:layout_width="300dp"
		android:layout_below="@id/clock"
		android:layout_centerHorizontal="true"/>

	<ImageButton android:id="@+id/home"
		android:src="@drawable/home"
		style="@style/HeaderbarButtons"
		android:layout_alignParentRight="true"
		android:contentDescription="@string/home" />
	<ImageButton android:id="@+id/back"
		android:src="@drawable/navigation_back"
		style="@style/HeaderbarRoundTopLeft"
		android:layout_toLeftOf="@id/home"
		android:contentDescription="@string/back" />

</RelativeLayout>
