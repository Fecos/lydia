<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="horizontal">
		<fragment
			android:id="@+id/map_controls"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:name="ca.efriesen.lydia.fragments.MapControlsFragment" />

		<View	android:layout_weight="1"
				android:layout_height="match_parent"
				android:layout_width="0dip"/>
		<LinearLayout
				android:orientation="vertical"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="160dip"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<fragment
				android:id="@+id/map_fragment"
				android:layout_width="match_parent"
				android:layout_marginTop="10dip"
				android:layout_height="330dip"
				android:name="ca.efriesen.lydia.fragments.MyMapFragment" />

			<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">
				<TextView android:id="@+id/map_travel_time" style="@style/SmallText" />
				<TextView android:id="@+id/map_travel_distance" style="@style/SmallText" />
				<TextView android:id="@+id/map_end_address" style="@style/SmallText" />
				<View android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" />
			</LinearLayout>

		</LinearLayout>

</LinearLayout>
